<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>MEAN Project Manager - User Registration</title>
  <base href="/">

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.css" type="text/css" />
  <link rel="stylesheet" href="custom/styles.css" type="text/css" />
  <link rel="icon" type="image/x-icon" href="favicon.ico">
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <section>
          <h1>MEAN Project Manager</h1>
          <hr />
          <div class="panel panel-default">
            <div class="panel-heading">
              <% include ../partials/right-menu %>
              <h4>User Registration</h4>
              <div class="clearfix"></div>
            </div>
            <div class="panel-body">
              <form method="POST">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" class="form-control" name="name" id="name" placeholder="Name">
                </div>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                  <label for="passwordConf">Password Confirmation</label>
                  <input type="password" class="form-control" id="passwordConf" name="passwordConf" placeholder="Password Confirmation">
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
                <a href="/" type="submit" class="btn btn-default">Back to Home</a>
              </form>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
  <script type="text/javascript" src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
